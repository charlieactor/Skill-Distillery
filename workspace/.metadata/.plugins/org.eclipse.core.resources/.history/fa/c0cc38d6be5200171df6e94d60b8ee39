package bingo;

import java.util.Scanner;

public class BingoDriver {
	public static void main(String[] args) {
		Scanner kb = new Scanner(System.in);
		Card myCard = new Card();
		
		System.out.println("Time to play bingo! Here's your bingo board: ");
		myCard.printCard(myCard);
		
		System.out.println("Ready to begin? Y/N");
		String ready = kb.next();
		if (!ready.equalsIgnoreCase("Y") || !ready.equalsIgnoreCase("N")) {
			System.out.println("Please make a valid choice");
		}
		
		
		
	}
}
