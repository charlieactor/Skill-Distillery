package zoo;

public class Animal {
	private String name, gender = "female";
	private int weight;

	Animal(String name, String gender, int weight) {
		setName(name);
		setGender(gender);
		setWeight(weight);
	}
	Animal(String name, int weight) {
		setName(name);
		setWeight(weight);
	}

	protected String makeNoise(String name) {
		if (name.equalsIgnoreCase("Lion")) {
			return "RAWR I'M A LION!";
		}
		else if (name.equalsIgnoreCase("Giraffe")) {
			return "WHAT NOISE DO GIRAFFES MAKE?!?";
		}
		else {
			return "NOISE";
		}
	}
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getGender() {
		return gender;
	}

	public void setGender(String gender) {
		this.gender = gender;
	}

	public int getWeight() {
		return weight;
	}

	public void setWeight(int weight) {
		this.weight = weight;
	}
}
