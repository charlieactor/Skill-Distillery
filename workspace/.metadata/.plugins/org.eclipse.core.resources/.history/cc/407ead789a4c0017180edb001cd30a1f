package lordofobjects;

public class Boss extends Enemies {

	public Boss(int health, int attack) {
		super(health, attack);
		// TODO Auto-generated constructor stub
	}

@Override
	
	public int attack() {
		int damage = 10 + ((int)(Math.random() * 5));
		double probability = Math.random();
		if (probability >= 0.5) {
			return damage;
		}
		else {
			damage = 0;
			return damage;
		}
	}

}
