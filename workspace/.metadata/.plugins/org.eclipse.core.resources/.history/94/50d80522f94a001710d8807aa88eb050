package labs;

public class MonthTest {
	public static void main(String[] args) {
		Month[] monthArray = new Month[12];

		Month january = defineMonth("January", "Jan", 31);
		Month february = defineMonth("February", "Feb", 28);
		Month march = defineMonth("March", "Mar", 31);
		Month april = defineMonth(april, "April", "Apr", 30);
		Month may = defineMonth(may, "May", "May", 31);
		Month june = defineMonth(june, "June", "Jun", 30);
		Month july = defineMonth(july, "July", "Jul", 31);
		Month august = defineMonth(august, "August", "Aug", 31);
		Month september = defineMonth(september, "September", "Sep", 30);
		Month october = defineMonth(october, "October", "Oct", 31);
		Month november = defineMonth(november, "November", "Nov", 30);
		Month december = defineMonth(december, "December", "Dec", 31);

		monthArray[0] = january;
		monthArray[1] = february;
		monthArray[2] = march;
		monthArray[3] = april;
		monthArray[4] = may;
		monthArray[5] = june;
		monthArray[6] = july;
		monthArray[7] = august;
		monthArray[8] = september;
		monthArray[9] = october;
		monthArray[10] = november;
		monthArray[11] = december;
		
		int sum = 0;
		for (int i = 0; i < monthArray.length; i++) {
			monthArray[i].display(true);
			sum += monthArray[i].monthDays;
		}
		System.out.println("Total days: " + sum);
	}

	public static Month defineMonth(String name, String abb, int days) {
		Month month = new Month();
		month.monthName = name;
		month.monthAbbreviation = abb;
		month.monthDays = days;
		return month;
	}
}
