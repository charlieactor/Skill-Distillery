package battleship;

public class Ship {
	private int length, numHits;
	
	Ship(int length, int numHits) {
		this.length = length;
		this.numHits = numHits;
	}

	Ship() {
	}
	
	public int getLength() {
		return length;
	}
	
	public void setLength(int length) {
		this.length = length;
	}
	
	public int getNumHits() {
		return numHits;
	}
	
	public void setNumHits(int numHits) {
		this.numHits = numHits;
	}
	
}
