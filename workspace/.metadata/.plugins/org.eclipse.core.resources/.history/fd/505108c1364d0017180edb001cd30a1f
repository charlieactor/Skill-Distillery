package labs;

public class Circle extends Shape {
	double radius;
	public Circle(String color, int radius) {
		super(color);
		this.radius = radius;
	}

	@Override
	public int getArea() {
		return Math.PI * radius * radius;
	}

	public int getRadius() {
		return radius;
	}

	public void setRadius(int radius) {
		this.radius = radius;
	}

}
